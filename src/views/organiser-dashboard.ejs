          <button class="close-modal" onclick="closeModal('createTaskModal')">
            <i class="fas fa-times"></i>
          </button>
        </div>
        <form id="createTaskForm" onsubmit="createTask(event)">
          <div class="form-group">
            <label class="form-label">Task Title *</label>
            <input
              type="text"
