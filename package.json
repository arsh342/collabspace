{
  "name": "collabspace",
  "version": "1.0.0",
  "description": "Team Collaboration Platform with real-time chat and task management",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "build": "node build.js",
    "build:css": "node build.js",
    "build:css:watch": "echo 'Watch mode not implemented yet. Use build:css for now.'",
    "build:prod": "npm run build && cd dist && npm install --production",
    "clean": "rm -rf dist src/public/css/dist src/public/js/dist",
    "prod": "npm run build && pm2 start src/app.js --name collabspace",
    "prod:dist": "npm run build:prod && cd dist && pm2 start app.js --name collabspace-prod",
    "stop": "pm2 stop collabspace",
    "restart": "pm2 restart collabspace",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "collaboration",
    "team",
    "chat",
    "tasks",
    "real-time",
    "nodejs",
    "express",
    "mongodb",
    "socket.io"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "connect-mongo": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "express-session": "^1.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "mongodb": "^6.20.0",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "socket.io": "^4.7.4"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "nodemon": "^3.0.2",
    "pm2": "^5.3.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.13"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
