{
  "name": "collabspace",
  "version": "1.0.0",
  "description": "Team Collaboration Platform with real-time chat and task management",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "dev:https": "USE_HTTPS=true nodemon src/app.js",
    "dev:ssl": "USE_HTTPS=true FORCE_HTTPS=true nodemon src/app.js",
    "build": "node scripts/build.js",
    "build:css": "node scripts/build.js",
    "build:css:watch": "echo 'Watch mode not implemented yet. Use build:css for now.'",
    "build:prod": "npm run build && cd dist && npm install --production",
    "clean": "rm -rf dist src/public/css/dist src/public/js/dist",
    "prod": "npm run build && pm2 start src/app.js --name collabspace",
    "prod:dist": "npm run build:prod && cd dist && pm2 start app.js --name collabspace-prod",
    "stop": "pm2 stop collabspace",
    "restart": "pm2 restart collabspace",
    "reset-password": "node scripts/reset-password.js",
    "ssl:generate": "node scripts/ssl-manager.js generate",
    "ssl:status": "node scripts/ssl-manager.js status",
    "ssl:remove": "node scripts/ssl-manager.js remove",
    "test:http": "echo 'ðŸ”“ Testing HTTP mode...' && npm run dev",
    "test:https": "echo 'ðŸ”’ Testing HTTPS mode...' && USE_HTTPS=true npm run dev",
    "test:ssl": "node scripts/test-ssl.js",
    "quick:http": "echo 'ðŸš€ Quick HTTP start on http://localhost:3000' && npm run dev",
    "quick:https": "echo 'ðŸ” Quick HTTPS start on https://localhost:3443' && USE_HTTPS=true npm run dev",
    "test": "NODE_ENV=test jest --runInBand",
    "test:integration": "NODE_ENV=test jest --config=jest.integration.config.js --runInBand",
    "test:integration:headful": "NODE_ENV=test HEADLESS=false jest --config=jest.integration.config.js --runInBand",
    "test:integration:slow": "NODE_ENV=test SLOWMO=250 jest --config=jest.integration.config.js --runInBand",
    "test:integration:debug": "NODE_ENV=test HEADLESS=false SLOWMO=500 SAVE_SCREENSHOTS=true jest --config=jest.integration.config.js --runInBand --verbose",
    "test:setup": "node scripts/create-test-users.js",
    "test:clean": "npm run test:setup && npm run test:integration",
    "test:login": "npm run test:setup && NODE_ENV=test jest __tests__/integration/quick-login.test.js --config=jest.integration.config.js --verbose",
    "test:all": "npm run test && npm run test:integration",
    "test:bootstrap": "node scripts/test-app.js",
    "test:created": "node scripts/test-createdAt.js",
    "status-check": "./scripts/status-checks.sh",
    "ci": "npm install && npm run status-check"
  },
  "keywords": [
    "collaboration",
    "team",
    "chat",
    "tasks",
    "real-time",
    "nodejs",
    "express",
    "mongodb",
    "socket.io"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "connect-mongo": "^5.1.0",
    "connect-redis": "^7.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "express-session": "^1.18.2",
    "express-validator": "^7.0.1",
    "firebase-admin": "^12.5.0",
    "fs": "^0.0.1-security",
    "greenlock-express": "^4.0.3",
    "helmet": "^7.1.0",
    "https": "^1.0.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "mongodb": "^6.20.0",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "redis": "^4.6.12",
    "selfsigned": "^4.0.0",
    "socket.io": "^4.7.4",
    "stripe": "^14.22.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "jest": "^29.7.0",
    "jest-puppeteer": "^11.0.0",
    "nodemon": "^3.0.2",
    "pm2": "^5.3.0",
    "postcss": "^8.5.6",
    "puppeteer": "^24.31.0",
    "supertest": "^6.3.4",
    "tailwindcss": "^4.1.13"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
